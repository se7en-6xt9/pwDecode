{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build abc",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/c/abc.c",
        "-o",
        "${workspaceFolder}/c/abc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
